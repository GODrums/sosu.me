<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.sudokusolver.ColdiacView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30dp"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:text="@string/header"
        android:textAlignment="center"
        android:textColor="@color/colorGold"
        android:textSize="48sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sub_heading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <com.example.sudokusolver.ColdiacView
        android:id="@+id/sub_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30dp"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:text="@string/sub_header"
        android:textAlignment="center"
        android:textColor="@color/colorGoldDark"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heading"/>

    <com.example.sudokusolver.ProximaButton
        android:id="@+id/buttonComplete"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:onClick="onClick"
        android:text="@string/complete"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonStep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sub_heading"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.example.sudokusolver.ProximaButton
        android:id="@+id/buttonStep"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/step"
        android:textSize="20sp"
        android:onClick="onClick"
        app:layout_constraintEnd_toStartOf="@id/buttonRules"
        app:layout_constraintStart_toEndOf="@id/buttonComplete"
        app:layout_constraintTop_toBottomOf="@+id/sub_heading"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.example.sudokusolver.ProximaButton
        android:id="@+id/buttonRules"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/rules"
        android:textSize="20sp"
        android:onClick="onClick"
        app:layout_constraintEnd_toStartOf="@id/buttonSetting"
        app:layout_constraintStart_toEndOf="@id/buttonStep"
        app:layout_constraintTop_toBottomOf="@id/sub_heading"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.example.sudokusolver.ProximaButton
        android:id="@+id/buttonSetting"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/settings"
        android:textSize="20sp"
        android:onClick="onClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonRules"
        app:layout_constraintTop_toBottomOf="@id/sub_heading"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>